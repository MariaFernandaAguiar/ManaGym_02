<div class="flex w-full mx-auto md:w-2/3">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
    <% end %>

    <%= render @training %>

    <%= link_to "Editar treino", edit_training_path(@training), class: "mt-2 rounded-lg py-3 px-5 bg-orange-400 text-white inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destruir treino", training_path(@training), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-orange-400 text-white font-medium" %>
    </div>
    <%= link_to "Voltar para treinos", trainings_path, class: "ml-2 rounded-lg py-3 px-5 bg-orange-400 text-white inline-block font-medium" %>
  </div>
</div>
