<div id="<%= dom_id gym %>">
  <p class="my-5">
    <strong class="block mb-1 font-medium">Nome academia:</strong>
    <%= gym.nome_academia %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Cnpj academia:</strong>
    <%= gym.cnpj_academia %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Quantidade de alunos:</strong>
    <%= gym.quan_alunos %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Endere√ßo da academia:</strong>
    <%= gym.endereco_academia %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Ver Academia", gym, class: "rounded-lg py-3 px-5 bg-orange-400 text-white inline-block font-medium" %>
    <%= link_to "Editar Academia", edit_gym_path(gym), class: "rounded-lg py-3 ml-2 px-5 bg-orange-400 text-white inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
