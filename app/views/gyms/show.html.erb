<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @gym %>

    <%= link_to "Editar Academia", edit_gym_path(@gym), class: "mt-2 rounded-lg py-3 px-5 bg-orange-400 text-white inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destruir Academia", gym_path(@gym), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-orange-400 text-white font-medium" %>
    </div>
    <%= link_to "Voltar para Academias", gyms_path, class: "ml-2 rounded-lg py-3 px-5 bg-orange-400 text-white inline-block font-medium" %>
  </div>
</div>
