<div id="<%= dom_id machine %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Quan maquina:</strong>
    <%= machine.quan_maquina %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Tipo maquina:</strong>
    <%= machine.tipo_maquina %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Nome maquina:</strong>
    <%= machine.nome_maquina %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Gym:</strong>
    <%= machine.gym_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this machine", machine, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this machine", edit_machine_path(machine), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
