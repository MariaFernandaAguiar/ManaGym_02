<div id="<%= dom_id machine %>">
  <p class="my-5">
    <strong class="block mb-1 font-medium">Quan maquina:</strong>
    <%= machine.quan_maquina %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Tipo maquina:</strong>
    <%= machine.tipo_maquina %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Nome maquina:</strong>
    <%= machine.nome_maquina %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Gym:</strong>
    <%= machine.gym_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Ver máquina", machine, class: "rounded-lg py-3 px-5 bg-orange-400 text-white inline-block font-medium" %>
    <%= link_to "Editar máquina", edit_machine_path(machine), class: "rounded-lg py-3 ml-2 px-5 bg-orange-400 text-white inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
