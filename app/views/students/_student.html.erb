<div id="<%= dom_id student %>">
  <p class="my-5">
    <strong class="block mb-1 font-medium">Nome aluno:</strong>
    <%= student.nome_aluno %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Rg aluno:</strong>
    <%= student.rg_aluno %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Email aluno:</strong>
    <%= student.email_aluno %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Data matricula:</strong>
    <%= student.data_matricula %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Gym:</strong>
    <%= student.gym_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Ver aluno", student, class: "rounded-lg py-3 px-5 bg-orange-400 inline-block text-white font-medium" %>
    <%= link_to "Editar aluno", edit_student_path(student), class: "rounded-lg py-3 ml-2 px-5 bg-orange-400 text-white inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
