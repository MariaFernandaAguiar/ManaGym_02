<div id="<%= dom_id employee %>">
  <p class="my-5">
    <strong class="block mb-1 font-medium">Nome funcionario:</strong>
    <%= employee.nome_funcionario %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Rg funcionario:</strong>
    <%= employee.rg_funcionario %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Email funcionario:</strong>
    <%= employee.email_funcionario %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Data inicio:</strong>
    <%= employee.data_inicio %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Salario funcionario:</strong>
    <%= employee.salario_funcionario %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Gym:</strong>
    <%= employee.gym_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Ver funcionário", employee, class: "rounded-lg py-3 px-5 bg-orange-400 text-white inline-block font-medium" %>
    <%= link_to "Editar funcionário", edit_employee_path(employee), class: "rounded-lg py-3 ml-2 px-5 bg-orange-400 text-white inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
