<div class="flex flex-col justify-center w-full p-5 px-36">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-bold">Funcionários</h1>
    <%= link_to "Novo funcionário", new_employee_path, class: "rounded-lg py-3 px-5 bg-orange-600 text-white block font-medium" %>
  </div>

  <div id="employees" class="min-w-full">
    <%= render @employees %>
  </div>
</div>
